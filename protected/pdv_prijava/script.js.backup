let firmeData = [];

// Uƒçitavanje podataka o firmama kad se stranica uƒçita
document.addEventListener("DOMContentLoaded", async () => {
  console.log("DOMContentLoaded - poku≈°avam da uƒçitam firme...");

  // Prvo postavi event listenere za PDV kalkulacije
  setupPdvInput("oporezivi_promet_21", "izlazni_pdv_21", 0.21);
  setupPdvInput("oporezivi_promet_15", "izlazni_pdv_15", 0.15);
  setupPdvInput("oporezivi_promet_7", "izlazni_pdv_7", 0.07);

  // Event listeneri za ulazni PDV
  document
    .getElementById("ulazni_pdv_domaci_promet")
    .addEventListener("input", updateUlazniPdv);
  document
    .getElementById("pdv_uvoz")
    .addEventListener("input", updateUlazniPdv);

  // Zatim uƒçitaj firme
  try {
    // Dohvata SVE firme (i firme na nuli i aktivne firme) iz /api/firme endpoint-a
    const response = await fetch("/api/firme");
    console.log("Response status:", response.status);

    if (response.ok) {
      firmeData = await response.json();
      console.log("Firme uƒçitane:", firmeData.length);
      populateFirmeDropdown();
    } else {
      console.error(
        "Gre≈°ka pri fetch-u:",
        response.status,
        response.statusText
      );
    }
  } catch (error) {
    console.error("Gre≈°ka pri uƒçitavanju firmi:", error);
  }
});

